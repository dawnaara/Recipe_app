<%= simple_form_for @recipe do |f| %>
	<% if @recipe.errors.any? %>
    <div class="alert alert-danger">
    	<h4><%= pluralize(@recipe.errors.count, "error") %>.</h4>
       		<ul>
         		<% @recipe.errors.full_messages.each do |msg| %>
           		<li><%= msg %></li>
         		<% end %>
       		</ul>
    </div>
   	<% end %>

	<%= f.input :title, required: true, input_html: { class: 'form-control' } %>
	<%= f.input :description, required: true, input_html: { class: 'form-control' } %>
  <%= f.input :image, input_html: { class: 'form-control' } %>	

  <div class="div">
    <h2>Ingredients</h2>
    <%= f.simple_fields_for :ingredients do |ingredient| %>
      <%= render 'ingredient_fields', f: ingredient %>
    <% end %>

    <div class="links">
      <%= link_to_add_association 'Add', f, :ingredients, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="div">
  <h2>Directions</h2>
  <%= f.simple_fields_for :directions do |direction| %>
    <%= render 'direction_fields', f: direction %>
  <% end %>

    <div class="links">
      <%= link_to_add_association 'Add', f, :directions, class: "btn btn-primary" %>   
    </div> 
  </div>

	<%= f.button :submit, class: "btn btn-primary" %>


<% end %>