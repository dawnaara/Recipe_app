<div class="container">
	<h2 class="text-center">Explore Recipes</h2>
</div>

<div class="container">
<% @recipes.each_slice(3) do |recipe| %>
		<div class="row">
			<% @recipes.each do |recipe| %>
				<div class="col-md-4">
				<%= link_to recipe do %>
         			<%= image_tag recipe.image.url(:medium) %>
           			<h4 class="media-heading">
					<%= link_to recipe.title, recipe %>
					</h4>
					<% end %>					
				</div>
			<% end %>
		</div>
<% end %>

	<div class="paginate text-center">	
		<%= will_paginate @recipes, renderer: BootstrapPagination::Rails %>
	</div>
</div>



